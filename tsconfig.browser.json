{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node10",
    "module": "umd",
    "outDir": "dist/browser",
    "target": "es2022",
    "lib": ["dom","es2022" ],
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": ["src/browser/**.ts"],
  "exclude": ["node_modules", "dist"]
}
