{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node10",
    "module": "commonjs",
    "outDir": "dist/browser",
    "target": "es6",
    "lib": ["dom", "es6"],
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": ["src/browser"],
  "exclude": ["node_modules", "dist"]
}
