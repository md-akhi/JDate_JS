{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "Node10",
    "module": "UMD",
    "outDir": "dist/browser",
    "target": "ES6",
    "lib": ["ES2016", "DOM"],
    "esModuleInterop": false,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": ["src/browser/**.ts"],
  "exclude": ["node_modules", "dist"]
}
