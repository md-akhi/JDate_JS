{
  "name": "@md-akhi/shdate",
  "version": "1.0.0",
  "description": "Date and Time Related Extensions SH{ Shamsi Hijri, Solar Hijri, Iranian Hijri }",
  "keywords": ["date", "time", "datetime"],
  "author": "Mohammad Amanalikhani <md.akhi.ir@gmail.com>",
  "license": "AGPL-3.0",
  "main": "./lib/src/index.js",
  "module": "./lib/mjs/index.js",
  "types": "./lib/src/index.d.ts",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon npm run dev:watch",
    "dev:watch": "npm run dev:build && npm run watch",
    "dev:build": "npm run clean:lib && npm run tsc:cjs",
    "watch:tsc": "tsc -w",
    "watch": "node lib/tests/dev.js",
    "clean:lib": "del lib",
    "tsc:cjs": "tsc -p ./tsconfig.json",
    "build": "npm run clean:lib && npm run tsc",
    "tsc": "npm run tsc:cjs && npm run tsc:esm && gulp",
    "tsc:esm": "tsc -p ./tsconfig.esm.json",
    "test": "nodemon npm run test:dev  ",
    "test:dev": "npm run dev:build && mocha",
    "postinstall": "husky install",
    "prepublishOnly": "npm run build"
  },
  "exports": {
    "import": "./lib/mjs/index.js",
    "require": "./lib/src/index.js",
    "types": "./lib/src/index.d.ts"
  },
  "directories": {
    "lib": "./lib",
    "src": "./src",
    "tests": "./tests",
    "docs": "./docs"
  },
  "man": ["./docs/**/*.md"],
  "repository": {
    "type": "git",
    "url": "https://github.com/md-akhi/SHDate-js.git"
  },
  "bugs": {
    "url": "https://github.com/md-akhi/SHDate-js/issues"
  },
  "homepage": "https://github.com/md-akhi/SHDate-js#readme",
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "cross-env": "^7.0.3",
    "del": "^6.0.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.6.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": ["prettier --write", "eslint --fix", "git add"],
    "*": ["prettier --write", "git add"]
  }
}
