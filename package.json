{
  "name": "@md-akhi/shdatetime",
  "version": "1.0.2-rc2",
  "description": "Date and Time Related Extensions SH{ Shamsi Hijri, Solar Hijri, Iranian Hijri }",
  "keywords": [
    "date",
    "time",
    "datetime",
    "shamsi hijri",
    "solar hijri",
    "iranian hijri",
    "typescript"
  ],
  "author": "Mohammad Amanalikhani <md.akhi.ir@gmail.com>",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "npm run dev",
    "dev": "nodemon --exec run-s dev:* --watch ./src --inspect",
    "dev:clean": "rm -rf dist/src dist/tests",
    "dev:test": "npm run tsc:test",
    "dev:watch": "node dist/tests/dev.js",
    "tsc:cjs": "tsc --project ./tsconfig.json",
    "tsc:mjs": "tsc --project ./tsconfig.mjs.json",
    "tsc:test": "tsc --project ./tsconfig.test.json",
    "tsc:umd": "tsc --project ./tsconfig.umd.json",
    "test": "npm run dev:test && mocha",
    "test:dev": "nodemon npm run test",
    "test:out": "node dist/tests/dev.js > tests/tst.out",
    "build": "run-s build:*",
    "build:clean": "rm -rf dist",
    "build:tsc": "run-p tsc:cjs tsc:mjs && gulp",
    "watch": "tsc -w",
    "postinstall": "husky install",
    "prepublishOnly": "npm run build --if-present"
  },
  "source": "./src/index.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/mjs/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    "import": "./dist/mjs/index.js",
    "require": "./dist/cjs/index.js",
    "types": "./dist/cjs/index.d.ts"
  },
  "directories": {
    "dist": "./dist",
    "src": "./src",
    "tests": "./tests",
    "docs": "./docs"
  },
  "man": [
    "./docs/**/*.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/md-akhi/SHDateTime-js.git"
  },
  "bugs": {
    "url": "https://github.com/md-akhi/SHDateTime-js/issues"
  },
  "homepage": "https://github.com/md-akhi/SHDateTime-js#readme",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "mocha": "^9.2.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "terser": "^5.12.1",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*": [
      "prettier --write",
      "git add"
    ]
  }
}
